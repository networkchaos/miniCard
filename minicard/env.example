# ===========================================
# MiniCard Environment Configuration
# ===========================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control

# ===========================================
# REQUIRED VARIABLES (Must be filled)
# ===========================================

# Web3Auth Configuration (REQUIRED)
# Get your client ID from https://web3auth.io
NEXT_PUBLIC_WEB3AUTH_CLIENT_ID=your_web3auth_client_id_here

# Database Configuration (REQUIRED)
# Choose one option below:

# Option 1: Supabase (Recommended - Free tier)
# DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres"

# Option 2: Railway (Easy setup)
# DATABASE_URL="postgresql://postgres:[PASSWORD]@[HOST]:[PORT]/railway"

# Option 3: Local PostgreSQL
DATABASE_URL="postgresql://postgres:password@localhost:5432/minicard_db"

# ===========================================
# Stripe Configuration
# ===========================================
# Get your API keys from https://stripe.com/dashboard
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# ===========================================
# Database Configuration
# ===========================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL="postgresql://username:password@localhost:5432/minicard_db"

# ===========================================
# Smart Contract Addresses (Update after deployment)
# ===========================================

# Celo Alfajores (Testnet) - Get these after deploying contracts
NEXT_PUBLIC_VAULT_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_USDT_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_USDC_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_SUBSCRIPTION_MANAGER_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_FIAT_BRIDGE_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_AAVE_ADAPTER_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_MOOLA_ADAPTER_ADDRESS=0x0000000000000000000000000000000000000000

# Celo Mainnet (Production) - Update when deploying to mainnet
NEXT_PUBLIC_CELO_VAULT_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_CELO_USDT_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_CELO_USDC_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# Base Sepolia (Testnet) - Update when deploying to Base
NEXT_PUBLIC_BASE_VAULT_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_BASE_USDT_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_BASE_USDC_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# Base Mainnet (Production) - Update when deploying to Base mainnet
NEXT_PUBLIC_BASE_MAINNET_VAULT_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_BASE_MAINNET_USDT_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_BASE_MAINNET_USDC_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# ===========================================
# M-Pesa Configuration (For Kenya payments)
# ===========================================
# Get these from Safaricom Developer Portal: https://developer.safaricom.co.ke/
MPESA_CONSUMER_KEY=your_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_mpesa_consumer_secret
MPESA_BUSINESS_SHORT_CODE=your_business_short_code
MPESA_PASSKEY=your_mpesa_passkey
MPESA_ENVIRONMENT=sandbox

# ===========================================
# PayPal Configuration (For global payments)
# ===========================================
# Get these from PayPal Developer Portal: https://developer.paypal.com/
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_ENVIRONMENT=sandbox

# ===========================================
# Email Service Configuration (Optional)
# ===========================================
# For production email sending (SendGrid, Resend, etc.)
EMAIL_SERVICE_API_KEY=your_email_service_api_key
EMAIL_FROM_ADDRESS=noreply@minicard.com
EMAIL_FROM_NAME=MiniCard

# ===========================================
# Security Configuration
# ===========================================
# Generate a secure random string for JWT signing
JWT_SECRET=your_jwt_secret_here

# ===========================================
# Development Configuration
# ===========================================
# Set to 'development' for local development
NODE_ENV=development

# ===========================================
# Network Configuration
# ===========================================
# Celo RPC URLs
CELO_RPC_URL=https://forno.celo.org
CELO_ALFAJORES_RPC_URL=https://alfajores-forno.celo-testnet.org

# Base RPC URLs
BASE_RPC_URL=https://mainnet.base.org
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# ===========================================
# Analytics Configuration (Optional)
# ===========================================
# Google Analytics
NEXT_PUBLIC_GA_ID=your_google_analytics_id

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# ===========================================
# Monitoring Configuration (Optional)
# ===========================================
# Sentry for error tracking
SENTRY_DSN=your_sentry_dsn

# ===========================================
# Rate Limiting Configuration
# ===========================================
# Redis URL for rate limiting (optional)
REDIS_URL=redis://localhost:6379

# ===========================================
# File Upload Configuration (Optional)
# ===========================================
# AWS S3 or similar for file uploads
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=your_aws_region
AWS_S3_BUCKET=your_s3_bucket_name

# ===========================================
# Security Headers
# ===========================================
# Content Security Policy
CSP_REPORT_URI=https://your-domain.com/api/csp-report

# ===========================================
# Feature Flags
# ===========================================
# Enable/disable features
NEXT_PUBLIC_ENABLE_WAITLIST=true
NEXT_PUBLIC_ENABLE_VIRTUAL_CARDS=true
NEXT_PUBLIC_ENABLE_PAYMENT_LINKS=true
NEXT_PUBLIC_ENABLE_SUBSCRIPTIONS=true
NEXT_PUBLIC_ENABLE_MPESA=true

# ===========================================
# Development Tools
# ===========================================
# Enable debug logging
DEBUG=minicard:*

# Enable verbose logging
VERBOSE_LOGGING=true

# ===========================================
# Production Overrides
# ===========================================
# Uncomment and modify for production
# NODE_ENV=production
# NEXT_PUBLIC_WEB3AUTH_CLIENT_ID=your_production_client_id
# STRIPE_SECRET_KEY=sk_live_your_live_stripe_key
# DATABASE_URL=your_production_database_url